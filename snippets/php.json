	"WordPress Debugging": {
		"prefix": "wpdebug",
		"body": [
			"define( 'WP_DEBUG', true );",
			"define( 'WP_DEBUG_LOG', true );",
			"define( 'WP_DEBUG_DISPLAY', false );"
		],
		"description": "Set up WordPress to ouput to wp-content/debug.log"
